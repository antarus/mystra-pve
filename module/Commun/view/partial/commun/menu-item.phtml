$page = $this->page;
$level = empty($this->level) ? 0 : $this->level;
$hasChildren = false;
foreach ($page->getPages() as $child) {
    if ($this->navigation()->accept($child)) {
        $hasChildren = true;
        break;
    }
}
if (!$hasChildren):
    
?>
