    <?php
    
    switch ($page->getLabel()){
        case "Accueil":
            $icone = "home";
            break;
        case "Utilisateurs":
            $icone = "group";
            break;
        case "Evenements":
            $icone = "calendar";
            break;
        default:
            $icone = "anchor";
            break;
